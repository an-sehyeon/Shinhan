  	<select id="selectStoreInfoByUrl" resultType="storeInfoManagementDTO">
    SELECT
      s.LOGO_IMG AS logoImg,
      s.STORE_NAME AS storeName,
      s.STORE_DETAIL AS storeDetail,
      se.ACCOUNT_BANK AS accountBank,
      se.ACCOUNT AS account,
      se.profile_info as profileInfo
    FROM STORE s
    JOIN SELLER se ON s.SELLER_ID = se.SELLER_ID
    WHERE s.STORE_URL = #{storeUrl}
  </select>
